{
  "name": "node-starter",
  "version": "0.0.0",
  "scripts": {
    "test": "run-s test:build-src test:mocha",
    "test:build-src": "esbuild src/index.ts --platform=node --bundle --outdir=dist",
    "test:mocha": "mocha test",
    "build": "tsc --noEmit",
    "dev": "chokidar \"./src/**\" -c \"npm start\"",
    "start": "node src/index.mjs"
  },
  "dependencies": {
    "@types/node": "^16.11.9",
    "chai": "^4.3.4",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.13.15",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "ohm-js": "^16.0.0",
    "typescript": "^4.5.2"
  }
}
